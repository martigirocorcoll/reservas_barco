<!DOCTYPE html>
<html>
  <head>
    <title>BoatBooking</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class= "text-center">
    <table class="table">
      <thead>
        <tr>
          <th><%= link_to 'Calendari', calendar_path, class: "btn btn-success" %></th>
          <th>  </th>
          <th><%= link_to 'Todas las reservas', bookings_path, class: "btn btn-secondary" %></th>
          <th><%= link_to 'Barqa', barqa_bookings_path, class: "btn btn-secondary" %></th>
          <th><%= link_to 'Eolo', eolo_bookings_path, class: "btn btn-secondary" %></th>
          <th>  </th>
          <th><%= link_to '+', new_booking_path, class: "btn btn-primary" %></th>
        </tr>
      </thead>
    </table>
    </div>
    <%= yield %>
  </body>
</html>
