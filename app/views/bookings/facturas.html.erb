<%i = 0 %>
<% @bookings.each do |booking|%>
  <%i += 1 %>
  <div style="border-top: 1px solid gray; padding-bottom: 30px; margin-bottom: 30px;">
    <table style="width:100%">
      <tr>
        <td>
          MARTÍ GIRÓ CORCOLL
        </td>
        <td>
          <p style="text-align:right; font-family: Arial, Helvetica, sans-serif;">Martí Giró Corcoll - 41559928d</p>
          <p style="text-align:right; font-family: Arial, Helvetica, sans-serif;">Pg. Joan de Borbó 103 L11</p>
          <p style="text-align:right; font-family: Arial, Helvetica, sans-serif;">Barcelona 08039</p>
        </td>
      </tr>
    </table>
  </div>
  <div style="border-bottom: 0px solid gray; font-family: Arial, Helvetica, sans-serif; padding-bottom: 30px; margin-bottom: 30px;">
    <table style="width:100%">
      <td>
        <h2 style= "font-family: Arial, Helvetica, sans-serif;"><%= "Factura: B220#{i}" %></h2>
      </td>
      <td>
      <h2 style="text-align:right;">Fecha: <small><%= booking.fecha_inicio.strftime("%d-%m-%Y") %></small></h2>
      </td>
    </table>
    <table style="width:100%">
      <td>
        <h3>
          <strong>Cliente:</strong>
          <strong><%= booking.nom %></strong>
        </h3>
      </td>
      <td>
        <h1 style = "text-align:right;">Total: <%= booking.preu%> €</h1>
      </td>
    </table>

    <p>
      <strong>Contacto:</strong>
      <%= booking.contacte %>
    </p>

    <p>
      <strong>Embarcación:</strong>
      <%= booking.barco %>
    </p>
  </div>
  <div style="border-bottom: 1px solid gray; font-family: Arial, Helvetica, sans-serif; padding-bottom: 30px; margin-bottom: 30px;">
    <table style = "width: 100%;">
      <tr>
        <td>
          <h2>Concepto</h2>
        </td>
        <td style="text-align:right;">
          <h2>Precio</h2>
        </td>
        <td style="text-align:right;">
          <h2>IVA</h2>
        </td>
        <td style="text-align:right;">
          <h2>Total</h2>
        </td>
      </tr>
      <tr>
        <td>
          <h3><strong>Alquiler del barco: <%=   booking.barco %></strong></h3>
        </td>
        <td style="text-align:right;">
            <p>
              <%= number_to_currency(booking.preu.to_i / (1.21))[1..].gsub(",",":").gsub(".",",").gsub(":",".")  %>€
            </p>
        </td>
        <td style="text-align:right;">
              <p>
              <%= number_to_currency(booking.preu.to_i / (1.21)*0.21)[1..].gsub(",",":").gsub(".",",").gsub(":",".")  %>€

              </p>
        </td>
        <td style="text-align:right;">
          <p>
            <%= booking.preu %>€
          </p>
        </td>
      </tr>
      <tr>
        <td>
          <p><strong>Inicio:</strong> <%= booking.fecha_inicio.strftime("%d-%m-%Y") %></p>
          <p><strong>Final:</strong> <%= booking.fecha_final.strftime("%d-%m-%Y") %></p>
        </td>
      </tr>

    </table>
  </div>
  <div class="page-break"></div>

<% end %>
